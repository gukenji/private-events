<div class="container">
  <div class="edit-event-container">
    <div class="edit-event-left">
      <h2>EDITAR EVENTO</h2>
    </div>
    <div class="edit-event-right">
      <%= simple_form_for(@event, html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="field">
          <div class="control">
            <%= f.input :name, label: "Nome do evento: ", required: true, input_html: { class: "textarea"  }, wrapper: false, label_html: { class: "label" }, placeholder: "Digite o nome do seu evento", autofocus: true %>
          </div>
          <div class="control">
            <%= f.input :date, as: :date, html5: true, required: true, label: "Data: "  %>
          </div>
          <div class="control">
            <%= f.input :local, label: "Local: ", required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Onde serÃ¡ realizado seu evento?" %>
          </div>
          <div class="control">
            <%= f.input :private, label: "", input_html: { class: "checkbox" }, wrapper: false, label_html: { class: "event_private" } %>
          </div>
        </div>
        <%= f.button :submit, class: "button is-info", value:"Atualizar" %>
      <% end %>
    </div>
  </div>
</div>
