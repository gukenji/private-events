<div class="login">
  <h2>LOGIN</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                label: "E-mail",
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                label: "Senha",
                input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions column">
      <div class="form-actions-buttons">
        <%= f.button :submit, "Log in", class: "button" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "button" %><br />
      </div>
      <div class="forgot-password">
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
      </div>
    </div>
  <% end %>
</div>
