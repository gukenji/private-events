<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice">
          <%= notice %>
        </p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert">
          <%= alert %>
        </p>
      </div>
    <% end %>
    <nav class="navbar">
      <div class="nav-left">
        <%= link_to 'eventos', root_path, class: "logo" %>
      </div>
      <div class="nav-right">
        <% if user_signed_in? %>
          <%= link_to current_user.email, edit_user_registration_path, class: "button is-info" %>
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "button is-info" %>
        <% else %>
          <%= link_to 'Login', new_user_session_path %>
          <%= link_to 'Cadastre-se', new_user_registration_path %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
